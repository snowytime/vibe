{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "ts-node": {
        "esm": true,
        "files": true,
        "transpileOnly": true,
        "experimentalSpecifierResolution": "explicit",
        "experimentalResolver": true
    },
    "mdx": {
        "plugins": [["remark-frontmatter", ["toml", "yaml"]], "remark-gfm"]
    }
}
